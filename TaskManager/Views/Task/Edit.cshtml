@model TaskManager.Models.TaskViewModel

<h2>@(Model.Id == 0 ? "Create Task" : "Edit Task")</h2>

<form asp-action="@(Model.Id == 0 ? "Create" : "Edit")" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" required />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DueDate" class="control-label"></label>
        <input asp-for="DueDate" class="form-control" type="date" required />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Priority</label>
        <div class="form-check">
            <input asp-for="Priority" class="form-check-input" type="radio" id="priorityYes" value="true" />
            <label class="form-check-label" for="priorityYes">
                Yes
            </label>
        </div>
        <div class="form-check">
            <input asp-for="Priority" class="form-check-input" type="radio" id="priorityNo" value="false" />
            <label class="form-check-label" for="priorityNo">
                No
            </label>
        </div>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
